/* ---------- Buttons ---------- */
button {
  font-family: inherit;
}

.icon-btn {
  display: inline-grid;
  place-items: center;
  width: 36px;
  height: 36px;
  border-radius: 10px;
  border: 1px solid var(--border);
  background: var(--surface);
  color: var(--text);
  box-shadow: var(--shadow);
  cursor: pointer;
  transition: transform var(--transition-fast), border-color var(--transition), background var(--transition);
}
.icon-btn:hover { transform: translateY(-1px); }
.icon-btn:active { transform: translateY(0); }

/* default: light → prikaži sunce */
.icon-sun { display: inline; }
.icon-moon { display: none; }

/* force dark */
html[data-theme="dark"] .icon-sun { display: none; }
html[data-theme="dark"] .icon-moon { display: inline; }

/* auto tema + OS dark → prikaži mjesec */
@media (prefers-color-scheme: dark) {
  html[data-theme="auto"] .icon-sun { display: none; }
  html[data-theme="auto"] .icon-moon { display: inline; }
}

